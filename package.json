{
  "name": "simpatico",
  "version": "0.1.0",
  "description": "A small, secure, low dependency, no-build, fast http & ws server for html & md. ",
  "author": "simpaticorp",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/simpaticoder/simpatico.git"
  },
  "type": "module",
  "exports": {
    ".": "./lib/simpatico.js"
  },
  "bin": {
    "simpatico": "./server.js",
    "blog": "./lib/blog.js"
  },
  "scripts": {
    "test": "node ./test/test.js",
    "start": "node ./server.js",
    "blog": "node ./lib/blog.js",
    "copy-vendor": "cp ./node_modules/github-markdown-css/github-markdown.css ./vendor/ && cp ./node_modules/webcryptobox/index.js ./vendor/webcryptobox.js",
    "copy-lab": "echo 'not ready yet' && cp ./node_modules/dompurify/dist/purify.es.mjs ./lab/dompurify.js && cp ./node_modules/qrcode/index.js ./vendor/qrcode.js"
  },
  "dependencies": {
    "chokidar": "^4.0.3",
    "webcryptobox": "^4.0.0",
    "ws": "^8.18.1"
  },
  "devDependencies": {
    "dompurify": "^3.2.5",
    "github-markdown-css": "^5.8.1",
    "qrcode": "^1.5.4"
  }
}
